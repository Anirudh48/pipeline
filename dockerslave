pipeline {
agent {
        label 'dockerslavenode'
    }
stages {
        stage('Build') {
            steps {
                echo 'Building..'
                                sh 'sudo chmod 777 build deploy test; ./build'

            }
        }
        stage('deploy') {
            steps {
                echo 'Deploying to TEST environment..'
                                sh 'sudo chmod 777 build deploy test; ./deploy'
            }
        }
        stage('test') {
            steps {
                echo 'Testing....'
                                sh 'sudo chmod 777 build deploy test; ./test'
                                        }
                                }
    }
}


